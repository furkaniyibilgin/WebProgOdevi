@model ErrorViewModel

@{
    ViewData["Title"] = "Hata";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="card p-4" style="max-width:600px; width:100%;">

        <h2 class="mb-3 text-warning">Bir hata oluştu</h2>

        <p class="text-muted">
            İsteğiniz işlenirken beklenmeyen bir hata meydana geldi.
        </p>

        @if (Model.ShowRequestId)
        {
            <div class="mb-3">
                <small class="text-muted">Request ID</small>
                <pre class="mb-0">@Model.RequestId</pre>
            </div>
        }

        <hr />

        <details class="text-muted">
            <summary class="mb-2" style="cursor:pointer;">Geliştirici Bilgisi</summary>
            <p class="mb-1">
                <strong>Development</strong> ortamı aktif edildiğinde hata detayları görüntülenir.
            </p>
            <p class="mb-0">
                Canlı sistemlerde bu mod açık olmamalıdır.
            </p>
        </details>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                Ana Sayfa
            </a>
        </div>
    </div>
</div>
