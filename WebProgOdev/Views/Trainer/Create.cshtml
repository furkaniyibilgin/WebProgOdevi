@model WebProgOdev.Models.Trainer

@{
    ViewData["Title"] = "Yeni Eğitmen";
}

<h2>Yeni Eğitmen Ekle</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Ad</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Soyad</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Uzmanlık</label>
        @Html.TextBoxFor(m => m.Specialty, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Specialty, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        @Html.TextAreaFor(m => m.Bio, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(m => m.Bio, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Başlangıç Saati</label>
        <select asp-for="StartHour" class="form-select">
            @for (int h = 8; h <= 21; h++)
            {
                <option value="@h">@h:00</option>
            }
        </select>
        @Html.ValidationMessageFor(m => m.StartHour, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Bitiş Saati</label>
        <select asp-for="EndHour" class="form-select">
            @for (int h = 9; h <= 22; h++)
            {
                <option value="@h">@h:00</option>
            }
        </select>
        @Html.ValidationMessageFor(m => m.EndHour, "", new { @class = "text-danger" })
    </div>


    <div class="form-check mb-3">
        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
        <label class="form-check-label">Aktif mi?</label>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a class="btn btn-secondary" asp-action="List">Geri</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
