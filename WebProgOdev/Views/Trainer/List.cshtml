@model IEnumerable<WebProgOdev.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenler";
}

<h2>Eğitmenler</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Eğitmen Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>Çalışma Saatleri</th>
            <th>Aktif mi?</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.FirstName @t.LastName</td>
                <td>@t.Specialty</td>
                <td>@t.StartHour:00 - @t.EndHour:00</td>
                <td>@(t.IsActive ? "Evet" : "Hayır")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@t.Id">Düzenle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@t.Id">Sil</a>
                </td>

            </tr>
        }
    </tbody>
</table>
