@model WebProgOdev.Models.AppointmentCreateViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

@{
    ViewData["Title"] = "Yeni Randevu";
}

<h2>Yeni Randevu</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Servis</label>
        <select class="form-select" asp-for="ServiceId">
            <option value="">-- Seçiniz --</option>
            @foreach (var s in (IEnumerable<WebProgOdev.Models.Service>)ViewBag.Services)
            {
                <option value="@s.Id">@s.Name (@s.DurationMinutes dk / @s.Price)</option>
            }
        </select>
        @Html.ValidationMessageFor(m => m.ServiceId, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Eğitmen</label>
        <select class="form-select" asp-for="TrainerId">
            <option value="">-- Seçiniz --</option>
            @foreach (var t in (IEnumerable<WebProgOdev.Models.Trainer>)ViewBag.Trainers)
            {
                <option value="@t.Id">@t.FullName (@t.StartHour:00 - @t.EndHour:00)</option>
            }
        </select>
        @Html.ValidationMessageFor(m => m.TrainerId, "", new { @class = "text-danger" })
    </div>

    <!-- Gün seçimi: Bugün / Yarın -->
    <div class="mb-3">
        <label class="form-label">Gün</label>
        <select asp-for="DayOption" class="form-select">
            <option value="Today">Bugün</option>
            <option value="Tomorrow">Yarın</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Başlangıç Saati</label>
        <div class="row">
            <div class="col-md-3">
                <select asp-for="StartHour" class="form-select">
                    <option value="">Saat</option>
                    @for (int h = 8; h <= 22; h++)
                    {
                        <option value="@h">@h:00</option>
                    }
                </select>
                @Html.ValidationMessageFor(m => m.StartHour, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                <select asp-for="StartMinute" class="form-select">
                    <option value="">Dakika</option>
                    <option value="0">00</option>
                    <option value="15">15</option>
                    <option value="30">30</option>
                    <option value="45">45</option>
                </select>
                @Html.ValidationMessageFor(m => m.StartMinute, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Bitiş Saati</label>
        <div class="row">
            <div class="col-md-3">
                <select asp-for="EndHour" class="form-select">
                    <option value="">Saat</option>
                    @for (int h = 8; h <= 22; h++)
                    {
                        <option value="@h">@h:00</option>
                    }
                </select>
                @Html.ValidationMessageFor(m => m.EndHour, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                <select asp-for="EndMinute" class="form-select">
                    <option value="">Dakika</option>
                    <option value="0">00</option>
                    <option value="15">15</option>
                    <option value="30">30</option>
                    <option value="45">45</option>
                </select>
                @Html.ValidationMessageFor(m => m.EndMinute, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Randevu Oluştur</button>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Vazgeç</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
