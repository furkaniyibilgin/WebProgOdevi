@{
    ViewData["Title"] = "Giriş Yap";
}

<h2>Giriş Yap</h2>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

<form method="post">

    <p>
        Email: <input type="email" name="email" />
    </p>
    <p>
        Şifre: <input type="password" name="password" />
    </p>

    <button type="submit">Giriş</button>
</form>
